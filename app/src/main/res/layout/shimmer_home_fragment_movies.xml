<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="24dp">

    <TextView
        android:id="@+id/recycler_view_title"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:background="@color/shimmer_color"
        android:textColor="@color/custom_bold_grey"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/button_view_more"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="@color/shimmer_color"
        android:textColor="@color/custom_bold_grey"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/recycler_view_title"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recycler_view_title">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="132dp"
            android:layout_marginEnd="16dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/AllCornersRounded"
            android:background="@color/shimmer_color"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="132dp"
            android:layout_marginEnd="16dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/AllCornersRounded"
            android:background="@color/shimmer_color"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="132dp"
            android:layout_marginEnd="16dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/AllCornersRounded"
            android:background="@color/shimmer_color"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_secondary"
    tools:context=".ui.activity.splash_activity.SplashActivity">

    <ImageView
        android:layout_width="254dp"
        android:id="@+id/cynema_logo"
        android:layout_height="254dp"
        android:src="@drawable/cynema_brand"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/cynema_logo_content_description" />



    <ProgressBar
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cynema_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="visible"
        android:indeterminateTint="@color/color_primary"/>

</androidx.constraintlayout.widget.ConstraintLayout>
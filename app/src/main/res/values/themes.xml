<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cynema_app" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/custom_bold_grey</item>
    </style>

    <style name="CustomProviderButton" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:elevation">0dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/custom_bold_grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="CustomMovieDetailsButton" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@drawable/bg_more_info_button</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/custom_bold_grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">16dp</item>
        <item name="android:drawableStart">@drawable/ic_info</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTint">@color/custom_bold_grey</item>
    </style>

    <style name="CustomInputTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="boxBackgroundColor">@color/custom_low_white</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxStrokeColor">@color/custom_bold_grey</item>
        <item name="hintTextColor">@color/custom_bold_grey</item>
    </style>

    <style name="CustomInputTextLayoutWithPadding" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">4dp</item>
        <item name="boxBackgroundColor">@color/custom_low_white</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxStrokeColor">@color/custom_bold_grey</item>
        <item name="hintTextColor">@color/custom_bold_grey</item>
    </style>

    <style name="CustomInputText" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CustomVerifyPasswordIcon" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="tint">@color/custom_normal_grey</item>
    </style>

    <style name="CustomVerifyPasswordLabel" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">4dp</item>
        <item name="android:textColor">@color/custom_normal_grey</item>
    </style>

    <style name="CustomSubText" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/custom_normal_grey</item>
    </style>

    <style name="CustomTitleText" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/custom_bold_grey</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomMainLabel" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="CustomImageButton" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_image_button</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="SpecificCornerRounded" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomRight">8dp</item>
    </style>

    <style name="AllCornersRounded" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>